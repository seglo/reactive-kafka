<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n%rEx</pattern>
        </encoder>
    </appender>

    <!--<logger name="akka" level="WARN"/>-->
    <!--<logger name="org.apache.kafka" level="INFO"/>-->
    <!--<logger name="org.apache.kafka.common.utils.AppInfoParser" level="ERROR"/>-->
    <!--<logger name="org.apache.kafka.clients.NetworkClient" level="ERROR"/>-->
    <!--<logger name="kafka" level="DEBUG" />-->
    <logger name="kafka.utils.KafkaScheduler" level="DEBUG" />
    <logger name="kafka.log.LogCleaner" level="DEBUG" />
    <!--<logger name="akka.kafka" level="TRACE"/>-->

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>